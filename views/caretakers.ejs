    <link rel="stylesheet" href="./css/style.css">
  </head>
  <body>
    <script>
    
    </script>
    <div class="navbar">
      <div class="container ">
        <h1><a href="./">FURRURU 呼嚕嚕</a></h1>
        <ul class="menu">
          <li><a href="./booking">快速媒合</a></li>
          <li><a href="./schedule">寶貝動態</a></li>
          <li><a href="./cam">即時影像</a></li>
          <li><a href="./about">關於呼嚕</a></li>          
          <li><a href="./user">帳戶</a></li>
          
        </ul>
        <i class="fa-solid fa-bars"></i>
        
      </div>
    </div>
    
    <div class="banner">
      <div class="container">
        <div class="title">
          <p class="FURRURU_title">FURRURU</p>
          <p class="FURRURU_title">FURRURU</p>
        </div>
        <div class="banner_slogan">
          <p>呼嚕嚕</br>讓您與毛寶貝心裡暖呼呼</p>
          <a  class="start "href="./booking">預約服務</a>
        </div>
      </div>
      <section>
        <div class="wave wave0"></div>
          <div class="wave wave1"></div>
          <div class="wave wave2"></div>

      </section>
    </div>
    <div class="content container">
      <div class="tech">
        <h2>快速媒合</h2>
        <p>我們將提供最適合您寶貝的服務</p>
      </div>
    
    <ul class="caretaker-list">
      <% caretakers.forEach(caretaker=>{%>
      <li><div class="caretaker">
        <img src=<%= caretaker.pic %> al
t="照護人員" class="caretaker-pic">        
<div class="info">
          <p class="caretaker_title"><%= caretaker.name %></p>
          <span><%= caretaker.location %></span><span><%= caretaker.distance %>km</span>
          <ul class="service">
            <li><img src="../img/CheckBox.png" alt=""><p><%= caretaker.service %></p></li>
          
          </ul>
          <div class="review">
          <p>評價：<%= caretaker.rating %></p>
          <!-- <img src="#" alt="星"> -->
          <a href="#" class="review-number">(<%= caretaker.commentNumber %>則)</a>
          </div>
        </div>
      
        <div class="tag">
          <ul>
            <li><p><%= caretaker.tag %></p></li>
          </ul>
      </div>
      <div class="more-info">
        
        
        <form method="GET" action="/caretakers/<%=caretaker.id%>">
          <button type="submit" class="moreInfo" id= "<%= caretaker.id %>" >更多資訊</button>
        </form>
        <a href="#">收藏</a>
        <a href="#">瀏覽數：<%=caretaker.clicked%></a>
        
      </div>
    </li>

    <% })%>
    </ul>
    <div class="safeplan_pic">
     <img src="./img/caretakers.png" alt="caretakers_demo_pic">
    </div>
  </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="../js/select.js"></script>
    <script src="../js/booking_option.js"></script>
    <script src="../js/test.js"></script>
    <!-- <script src="../js/moreinfo.js"></script> -->
    </body>

    </html>

